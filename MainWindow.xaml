<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AppMinecraftModManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppMinecraftModManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Minecraft Aduana">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid Background="Transparent"
      Height="32"
      VerticalAlignment="Top">
            <TextBlock Text="Minecraft Aduana"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="20,0,0,0"
               FontSize="14"
               Foreground="White"/>
        </Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="AnimatedGif"
               Width="200" Height="200"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               />
            <Button x:Name="SyncButton" Content="Actualizar Mods" Click="SyncButton_Click" HorizontalAlignment="Center" 
                    Margin="0,20,0,0"/>
            <ProgressBar x:Name="ProgressBarMods"
                 Minimum="0"
                 Maximum="100"
                 Height="20"
                 Visibility="Collapsed"/>

            <TextBlock x:Name="ProgressText"
               Text=""
               Margin="0,5,0,0"
               HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
